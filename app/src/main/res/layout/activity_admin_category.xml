<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="Add New Products"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_below="@id/slogan_category"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linear1_category"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/t_shirts"
            android:contentDescription="@string/todo"
            android:src="@drawable/tshirts" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sports_t_shirts"
            android:contentDescription="@string/todo"
            android:src="@drawable/sports" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female_dresses"
            android:contentDescription="@string/todo"
            android:src="@drawable/female_dresses" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/sweathers"
            android:contentDescription="@string/todo"
            android:src="@drawable/sweather" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linear1_category"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linear2_category"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_marginEnd="12dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/glasses"
            android:contentDescription="@string/todo"
            android:src="@drawable/glasses" />

        <ImageView
            android:layout_marginEnd="12dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/purses_bags_wallets"
            android:contentDescription="@string/todo"
            android:src="@drawable/purses_bags" />

        <ImageView
            android:layout_marginEnd="12dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/hats_caps"
            android:contentDescription="@string/todo"
            android:src="@drawable/hats" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/shoes"
            android:contentDescription="@string/todo"
            android:src="@drawable/shoess" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linear2_category"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linear3_category"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_marginEnd="12dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/headphonens_handsfree"
            android:contentDescription="@string/todo"
            android:src="@drawable/headphoness" />

        <ImageView
            android:layout_marginEnd="12dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/laptops_pc"
            android:contentDescription="@string/todo"
            android:src="@drawable/laptops" />

        <ImageView
            android:layout_marginEnd="12dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/watches"
            android:contentDescription="@string/todo"
            android:src="@drawable/watches" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/mobiles"
            android:contentDescription="@string/todo"
            android:src="@drawable/mobiles" />

    </LinearLayout>

</RelativeLayout>